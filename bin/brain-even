#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function cli\line;
use function cli\prompt;

line('Welcome to the Brain Game!');
$name = prompt('May I have your name?');
line("Hello, %s!", $name);
line('Answer "yes" if the number is even, otherwise answer "no".');

function checked($question, $answer) :bool
{
    $rightAnswer = ($question % 2 === 0) ? "yes" : "no";
    return $rightAnswer === $answer;
}

function game() :bool {
    for ($i = 0, $numberOfTrying = 3; $i < $numberOfTrying; $i++) {
        $question = rand(1,100);
        line("Question: %s", $question);
        $answer = prompt("Your answer");
        if (checked($question, $answer)) {
            line("Correct!");
        } else {
            line("'yes' is wrong answer ;(. Correct answer was 'no'.");
            return false;
        }
    }
    return true;
}
$congratulationsText = (game()) ? "Congratulations, %s!" : "Let's try again, %s!";
line($congratulationsText, $name);

